<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="SegProgressbar">
    <attr format="dimension" name="p_width"/> <!-- 控件宽度 -->
    <attr format="dimension" name="p_height"/><!-- 控件官高度 -->
    <attr format="integer" name="p_maxValue"/><!-- 控件progress最大值 -->
    <attr format="integer" name="p_progressValue"/><!--  当前 progress value -->
    <attr format="enum" name="p_shapeType"><!-- 控件类型 矩形，圆，圆角矩形 -->
      <enum name="rectangle" value="0"/>
      <enum name="circle" value="1"/>
      <enum name="square" value="2"/>
    </attr>
    <attr format="color" name="p_progressColor"/><!-- progress 进度条颜色 -->
    <attr format="color" name="p_progressBackColor"/><!-- progress 背景 颜色 -->

    <attr format="boolean" name="p_showProgressSegment"/><!-- 是否显示progress 分段 颜色 -->
    <attr format="color" name="p_progressSegmentColor"/><!-- progress 分段 颜色 -->
    <attr format="color" name="p_progressDoubleSegColor"/><!-- progress 分段间隔 颜色 -->

    <attr format="dimension" name="p_circle_radius"/><!-- 圆 半径 -->
    <attr format="dimension" name="p_circle_X_Y"/><!-- 圆 心 横坐标或者纵坐标 > 半径（正方形嘛）-->
    <attr format="boolean" name="p_showText"/><!-- 是否显示文字 -->
    <attr format="dimension" name="p_textSize"/><!-- 文字大小 -->
    <attr format="color" name="p_textLowColor"/><!-- 1/3 文字颜色 -->
    <attr format="color" name="p_textMiddleColor"/><!-- 1/3 - 2/3文字颜色 -->
    <attr format="color" name="p_textHighColor"/><!-- 2/3文字颜色 -->
    <attr format="dimension" name="p_square_radius"/><!-- 圆角矩形 半径-->

  </declare-styleable>


  <declare-styleable name="MultiScrollNumber">
    <attr name="primary_number" format="integer"/>
    <attr name="target_number" format="integer"/>
    <attr name="number_size" format="integer"/>
    <!--<attr name="number_color" format="color"/>-->
  </declare-styleable>
</resources>