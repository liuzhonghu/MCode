<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".mvc.MVCFragment"
    >

  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="试试手气"
      android:textColor="@android:color/black"
      android:textSize="18sp"
      />

  <EditText
      android:id="@+id/et_lucky_num"
      android:layout_width="210dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="24dp"
      android:hint="输入幸运数字"
      android:inputType="number"
      />

  <Button
      android:id="@+id/btn_go"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/et_lucky_num"
      android:layout_marginLeft="12dp"
      android:layout_toRightOf="@+id/et_lucky_num"
      android:text="GO"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/et_lucky_num"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="36dp"
        >

      <ImageView
          android:id="@+id/lucky_cover"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />

      <TextView
          android:id="@+id/lucky_desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:textColor="@android:color/background_light"
          android:textSize="16sp"
          />

    </LinearLayout>
  </ScrollView>
</RelativeLayout>